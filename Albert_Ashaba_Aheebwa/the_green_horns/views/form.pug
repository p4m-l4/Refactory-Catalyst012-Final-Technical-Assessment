doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title The Green Horns
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous')
    link(rel="stylesheet" href="/css/style.css")
header
    nav.navbar.navbar-expand-lg.bg-light
        .container-fluid
            a.navbar-brand(href='/') The Green Horns
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link.active(aria-current='page' href='/') Reg Form
                    li.nav-item
                        a.nav-link(href='/table') Registered Students
main
    .row
        .col
        .col-6
            form.mt-5.needs-validation(action="/" method="post" enctype="multipart/form-data" novalidate)
                .row
                    .mb-3.col-12.text-center.form-title Student Registration Form
                    if messages.length > 0
                        .alert.alert-success.d-flex.justify-content-center.alert-dismissible.fade.show(role="alert")
                            span #{messages}
                            button.btn-close(data-bs-dismiss="alert" type="button")
                    .row
                        .col-8
                            .mb-3.col-12
                                label.form-label(for='surname') Surname
                                input#surname.form-control(type='text' name='surname' aria-describedby='' pattern= "[a-zA-Z]{1,16}" required)
                                .valid-feedback 
                                    | Looks good!
                                .invalid-feedback 
                                    | Invalid Field
                            .mb-3.col-12
                                label.form-label(for='givenname') Given name
                                input#givenname.form-control(type='text' name='givenname' aria-describedby='' pattern= "[a-zA-Z]{1,16}" required)
                                .valid-feedback 
                                    | Looks good!
                                .invalid-feedback 
                                    | Invalid Field
                            .mb-3.col-12
                                label.form-label(for='title') Title
                                select.form-select(name="title" aria-label='Default select example' required)
                                    option(value="" selected) -- Select Title --
                                    option(value='Mr.') Mr.
                                    option(value='Mrs') Mrs.
                                    option(value='Miss') Miss
                                    option(value='Dr') Dr.
                                    option(value='Prof') Prof. 
                                    option(value="Eng") Eng.
                                .valid-feedback 
                                    | Looks good!
                                .invalid-feedback 
                                    | Invalid field
                        .mb-3.col-4
                            .box
                            input.form-control(type="file" name="avatar" required)
                            .invalid-feedback All field are required
                            .valid-feedback Looks good!

                    .mb-3.col-12
                        label.form-label(for='gender')  Gender
                        .row.ps-3
                            .form-check.col-6
                                input#male.form-check-input(type='radio' value='male' name='gender' checked)
                                label.form-check-label(for='male') Male
                                .valid-feedback 
                                    | Looks good!
                                .invalid-feedback 
                                    | Gender Must be Specified.
                            .form-check.col-6
                                input#female.form-check-input(type='radio' value='female' name='gender')
                                label.form-check-label(for='female') Female
                                .valid-feedback 
                                    | Looks good!
                                .invalid-feedback 
                                    | Gender Must be Specified.
                    .mb-3.col-6
                        label.form-label(for='dob') Date of Birth
                        input#dob.form-control(type='date' name='dob' aria-describedby='' max="2006-12-30" min="1872-01-01" required)
                        .valid-feedback 
                            | Looks good!
                        .invalid-feedback 
                            | Select date of birth.
                    .mb-3.col-6
                        label.form-label(for='country') Country
                        select.form-select(name="country" aria-label='Default select example' required)
                            option(value="" selected) -- Select Country --
                            option(value='uganda') Uganda
                            option(value='kenya') Kenya
                            option(value='tanzania') Tanzania
                            option(value='rwanda') Rwanda
                            option(value='burundi') Burundi
                        .valid-feedback 
                            | Looks good!
                        .invalid-feedback 
                            | You must select your country of Birth.
                    .mb-3.col-12
                        label.form-label(for='residence') Place of residence
                        input#residence.form-control(type='text' name='residence' aria-describedby='' pattern= "[a-zA-Z]{1,20}" required)
                        .valid-feedback 
                            | Looks good!
                        .invalid-feedback 
                            | Invalid field.
                    .mb-3.col-12
                        label.form-label(for='nationality') Nationality
                        input#nationality.form-control(type='text' name='nationality' aria-describedby='' pattern= "[a-zA-Z]{5,20}" required)
                        .valid-feedback 
                            | Looks good!
                        .invalid-feedback 
                            | Invalid field.
                button.btn.btn-primary(type='submit') Submit
        .col
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4' crossorigin='anonymous')
script(src="/js/validate.js") 
